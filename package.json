{
    "name": "boilerplate",
    "version": "0.0.1",
    "main": "index.js",
    "private": true,
    "engines": {
        "node": ">=8.10.0",
        "npm": ">=5.6.0",
        "yarn": ">=1.5.1"
    },
    "scripts": {
        "start": "gulp serve",
        "start:debug": "cross-env DEBUG=boilerplate:* yarn start",
        "build": "gulp",
        "copy": "gulp copy",
        "cm": "npx git-cz",
        "babel": "gulp babel",
        "lint": "esw *.js server config --color",
        "lint:watch": "yarn lint -- --watch",
        "beautify": "es-beautifier -u -c .eslintrc.js *.js server config",
        "precommit": "yarn lint && yarn test",
        "test": "cross-env NODE_ENV=test ./node_modules/.bin/jest server/tests",
        "test:watch": "jest --watch",
        "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _jest -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive",
        "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
        "report-coverage": "coveralls < ./coverage/lcov.info"
    },
    "keywords": [
        "express",
        "node",
        "node.js",
        "mongodb",
        "mongoose",
        "es6",
        "jest",
        "REST",
        "API",
        "boilerplate"
    ],
    "jest": {
        "automock": false,
        "bail": false,
        "verbose": false,
        "setupFiles": [],
        "testMatch": [
            "**/Tests/**/*.js",
            "**/?(*.)(spec|test|integration).js?(x)"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/coverage/",
            "/dist/"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "@babel/polyfill": "^7.8.7",
        "@hapi/joi": "^17.1.1",
        "@sentry/node": "^5.15.5",
        "axios": "^0.19.2",
        "bcrypt": "^4.0.1",
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "debug": "^4.1.1",
        "del": "^5.1.0",
        "dotenv": "^8.2.0",
        "express": "4.17.1",
        "express-jwt": "5.3.3",
        "express-validator": "^6.4.0",
        "express-winston": "4.0.3",
        "gulp": "4.0.2",
        "gulp-load-plugins": "^2.0.3",
        "helmet": "3.22.0",
        "http-status": "^1.4.2",
        "i18n": "^0.9.0",
        "i18next": "^19.4.3",
        "i18next-express-middleware": "^2.0.0",
        "i18next-node-fs-backend": "^2.1.3",
        "jsonwebtoken": "8.5.1",
        "lodash": "4.17.15",
        "method-override": "^3.0.0",
        "moment": "^2.24.0",
        "moment-timezone": "^0.5.28",
        "morgan": "1.10.0",
        "pg": "^8.0.3",
        "pg-hstore": "^2.3.3",
        "run-sequence": "^2.2.1",
        "sequelize": "^5.21.7",
        "sequelize-cli": "^5.5.1",
        "supertest": "4.0.2",
        "supertest-as-promised": "4.0.2",
        "winston": "3.2.1",
        "winston-transport-http-stream": "^0.1.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/node": "^7.8.7",
        "@babel/preset-env": "^7.9.5",
        "@babel/register": "^7.9.0",
        "commitizen": "^4.0.4",
        "coveralls": "^3.0.13",
        "cross-env": "7.0.2",
        "cz-conventional-changelog": "^3.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-base": "14.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-watch": "6.0.1",
        "gulp-babel": "8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-jshint": "^2.1.0",
        "gulp-newer": "^1.4.0",
        "gulp-nodemon": "^2.5.0",
        "gulp-sourcemaps": "^2.6.5",
        "husky": "^4.2.5",
        "jest": "25.4.0",
        "jsdom": "16.2.2",
        "jshint": "^2.11.0"
    },
    "validate-commit-msg": {
        "types": [
            "feat",
            "fix",
            "docs",
            "style",
            "refactor",
            "perf",
            "test",
            "chore",
            "revert"
        ],
        "warnOnFail": false,
        "maxSubjectLength": 100,
        "subjectPattern": "^[A-Z]+-[0-9]+ - .*",
        "subjectPatternErrorMsg": "Subject must be in format 'CMS-123 - Commit message'",
        "helpMessage": ""
    },
    "husky": {
        "hooks": {
            "pre-commit": "esw *.js server config --color && jest"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
